<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_reset_app_logo"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_reset_app_logo"
        android:layout_centerInParent="true"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp">

        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/et_reset_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ríomhphost" />

        <Button
            android:id="@+id/btn_reset_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_reset_username"
            android:text="Athshocraigh sonraí" />

    </RelativeLayout>
</RelativeLayout>