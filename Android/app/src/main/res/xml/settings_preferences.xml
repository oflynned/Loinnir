<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Socruithe Cúntais">
        <Preference
            android:key="pref_update_profile_picture"
            android:summary="Bainfear úsáid as do phictiúr próifíle reatha ar Facebook"
            android:title="Nuashonraigh an Pictiúr Próifíle" />

        <ListPreference
            android:defaultValue="15_mins"
            android:entries="@array/locationUpdateFrequencyHeadings"
            android:entryValues="@array/locationUpdateFrequencyValues"
            android:key="pref_location_update_frequency"
            android:summary="Sioncronú cumasaithe ar gach aon 15 nóiméad"
            android:title="Minicíocht Nuashonrú do Cheantair" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_should_share_location"
            android:summary="Mura bhfuil an rogha cumasaithe, ní bheidh tú in ann ceantair gharbha na n-úsáideoirí eile a fheiceáil, agus cuirfear do cheantar faoi cheilt."
            android:title="Taispeáin do Cheantar" />

        <Preference
            android:key="pref_manage_blocked_users"
            android:summary="... úsáideoir ar cosc faoi láthair"
            android:title="Bainistigh Úsáideoirí ar Cosc" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Faoin Aip">

        <Preference
            android:key="pref_share_app"
            android:summary="Taispeáin do leantóirí nó chairde an chéad aip shóisialta don Ghaeilge"
            android:title="Roinn Loinnir ar Léibheann Sóisialta" />

        <Preference
            android:key="pref_about_loinnir"
            android:summary="Níos mó eolais i dtaobh na h-aipe"
            android:title="Faoi Loinnir" />

        <Preference
            android:key="pref_visit_website"
            android:summary="Téigh chuig Loinnir.ie chun tuilleadh a fheiceáil"
            android:title="Tabhair Cuairt Dúinn" />

        <Preference
            android:key="pref_app_version"
            android:summary="@string/app_version"
            android:title="Leagan Aipe" />

    </PreferenceCategory>


    <PreferenceCategory android:title="Cúrsaí Dleathacha">

        <Preference
            android:key="pref_licences"
            android:title="Ceadúnais" />

        <Preference
            android:key="pref_privacy_policy"
            android:title="Polasaí Príobháideachais" />

        <Preference
            android:key="pref_tos"
            android:title="Téarmaí Seirbhíse" />

    </PreferenceCategory>

    <PreferenceCategory android:title="An Ceantar Baoil">
        <Preference
            android:key="pref_log_out"
            android:title="Logáil Amach" />

        <Preference
            android:key="pref_clean_account"
            android:title="Glan mo Chuid Chúntais" />

        <Preference
            android:key="pref_delete_account"
            android:title="Scrios do Chúntas Loinnir" />
    </PreferenceCategory>
</PreferenceScreen>